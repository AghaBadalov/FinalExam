@using Medicio.Helpers
@model PaginatedList<Doctor>
@{
    int counter = ((Model.ActivePage - 1) * 4); 
}
<table class="table">
    <thead>
        <a asp-action="create" asp-controller="doctor"  class="btn btn-success">Create</a>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Profession</th>
            <th scope="col">TTUrl</th>
            <th scope="col">IGUrl</th>
            <th scope="col">LNUrl</th>
            <th scope="col">FBURl</th>
            <th scope="col">Image</th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Profession.Name</td>
                <td>@item.TTUrl</td>
                <td>@item.IGUrl</td>
                <td>@item.LNUrl</td>
                <td>@item.FBUrl</td>
                <td>
                    <img style="max-width:100px"
                     src="~/uploads/doctors/@item.ImageUrl">
                </td>
                <td>
                    <a asp-action="update" asp-controller="doctor" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-action="softdelete" asp-controller="doctor" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </td>
                
            </tr>
        }
        
    </tbody>
</table>
<div style="margin-left:500px">
    <form>
        <nav aria-label="Page navigation example">
  <ul class="pagination">
    @if(Model.HasPrevious){
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)">Previous</a></li>
    }
   
                @for (int i = 1; i <= Model.TotalPageCount; i++)
                {
                    <li class="page-item @(Model.ActivePage==i? "active" : "" )"><a class="page-link" asp-route-page="@i">@i</a></li>
                }
    
    @if(Model.HasNext){
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">Next</a></li>
    }
  </ul>
</nav>
    </form>
</div>